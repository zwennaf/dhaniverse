# Makefile for Rust ICP Canister

.PHONY: help build test clean deploy-local deploy-ic upgrade lint format check-format

# Default target
help:
	@echo "ğŸš€ Dhaniverse Rust ICP Canister"
	@echo "================================"
	@echo ""
	@echo "Available targets:"
	@echo "  build         - Build the canister"
	@echo "  test          - Run all tests"
	@echo "  test-unit     - Run unit tests only"
	@echo "  test-integration - Run integration tests only"
	@echo "  clean         - Clean build artifacts"
	@echo "  deploy-local  - Deploy to local replica"
	@echo "  deploy-ic     - Deploy to IC mainnet"
	@echo "  upgrade-local - Upgrade local canister"
	@echo "  upgrade-ic    - Upgrade IC canister"
	@echo "  lint          - Run clippy linter"
	@echo "  format        - Format code with rustfmt"
	@echo "  check-format  - Check code formatting"
	@echo "  candid        - Generate Candid interface"
	@echo "  docs          - Generate documentation"
	@echo ""

# Build targets
build:
	@echo "ğŸ”¨ Building canister..."
	@rustup target add wasm32-unknown-unknown
	@cargo build --target wasm32-unknown-unknown --release
	@echo "âœ… Build complete"

candid:
	@echo "ğŸ“ Generating Candid interface..."
	@cargo run --bin generate_candid > rust_icp_canister.did
	@echo "âœ… Candid interface generated"

# Test targets
test: test-unit test-integration

test-unit:
	@echo "ğŸ§ª Running unit tests..."
	@cargo test --lib
	@echo "âœ… Unit tests complete"

test-integration:
	@echo "ğŸ”— Running integration tests..."
	@cargo build --target wasm32-unknown-unknown --release
	@cargo test --test integration_tests
	@echo "âœ… Integration tests complete"

# Deployment targets
deploy-local:
	@echo "ğŸ  Deploying to local replica..."
	@./deploy-local.sh
	@echo "âœ… Local deployment complete"

deploy-ic:
	@echo "ğŸŒ Deploying to IC mainnet..."
	@./deploy-ic.sh
	@echo "âœ… IC deployment complete"

# Upgrade targets
upgrade-local:
	@echo "ğŸ”„ Upgrading local canister..."
	@./upgrade-canister.sh --network local
	@echo "âœ… Local upgrade complete"

upgrade-ic:
	@echo "ğŸ”„ Upgrading IC canister..."
	@./upgrade-canister.sh --network ic --backup
	@echo "âœ… IC upgrade complete"

# Code quality targets
lint:
	@echo "ğŸ” Running clippy linter..."
	@cargo clippy --all-targets --all-features -- -D warnings
	@echo "âœ… Linting complete"

format:
	@echo "ğŸ¨ Formatting code..."
	@cargo fmt
	@echo "âœ… Formatting complete"

check-format:
	@echo "ğŸ” Checking code formatting..."
	@cargo fmt -- --check
	@echo "âœ… Format check complete"

# Documentation
docs:
	@echo "ğŸ“š Generating documentation..."
	@cargo doc --no-deps --open
	@echo "âœ… Documentation generated"

# Cleanup
clean:
	@echo "ğŸ§¹ Cleaning build artifacts..."
	@cargo clean
	@rm -f rust_icp_canister.did
	@echo "âœ… Cleanup complete"

# Development workflow
dev: clean build test lint
	@echo "âœ… Development workflow complete"

# CI/CD workflow
ci: clean build test-unit lint check-format
	@echo "âœ… CI workflow complete"

# Release workflow
release: clean build test candid
	@echo "âœ… Release workflow complete"

# Quick start for new developers
setup:
	@echo "ğŸš€ Setting up development environment..."
	@rustup target add wasm32-unknown-unknown
	@cargo install pocket-ic || echo "PocketIC installation failed (optional)"
	@echo "âœ… Setup complete"

# Performance benchmarks
bench:
	@echo "âš¡ Running benchmarks..."
	@cargo bench
	@echo "âœ… Benchmarks complete"

# Security audit
audit:
	@echo "ğŸ”’ Running security audit..."
	@cargo audit
	@echo "âœ… Security audit complete"

# Check all (comprehensive check before commit)
check-all: clean build test lint check-format audit
	@echo "âœ… All checks passed - ready to commit!"